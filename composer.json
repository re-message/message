{
    "name": "relmsg/message",
    "description": "Relations Messenger Message Standard for networking.",
    "type": "library",
    "license": "Apache-2.0",
    "homepage": "https://dev.relmsg.ru/packages/message",
    "authors": [
        {
            "name": "Oleg Kozlov",
            "email": "h1karo@relmsg.ru",
            "homepage": "https://rel.ms/h1karo",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-mbstring": "*",

        "doctrine/collections": "^1.6",
        "webmozart/json": "^1.2.2"
    },
    "autoload": {
        "psr-4": {
            "RM\\Standard\\Message\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RM\\Standard\\Message\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "monolog/monolog": "^2.0.2",

        "phpunit/phpunit": "^9.0",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "scripts": {
        "test": "phpunit",
        "lint": "php-cs-fixer fix --show-progress=dots",
        "lint:ci": "php-cs-fixer fix --dry-run -v --show-progress=dots --diff-format=udiff"
    }
}
